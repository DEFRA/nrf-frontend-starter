{% if progressSteps %}
  <h3 class="govuk-heading-s">Application progress</h3>
  <ol class="govuk-list govuk-list--number govuk-body-s">
    {% for step in progressSteps %}
      <li {% if step.active %}class="govuk-!-font-weight-bold"{% endif %}>
        {{ step.text }}
        {% if step.complete %} âœ“{% endif %}
      </li>
    {% endfor %}
  </ol>
{% endif %}

{% if helpContent %}
  <h3 class="govuk-heading-s">{{ helpContent.title or 'Need help?' }}</h3>
  {{ helpContent.content | safe }}
{% endif %}